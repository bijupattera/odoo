<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Library Book Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
    <form sring="LibraryBook Form">
        <header>
            <button string="Make Available" type="object" name="action_avail"
                states="draft" class="oe_highlight" />
            <button string="Mark as lost" type="object" name="action_lost"
                states="available" class="oe_highlight"/>
            <button string="Reset to Available" type="object" name="action_got"
                states="lost" />
        <field name="state" widget="statusbar"/>
        </header>
        <sheet>
        <group>
            <field name="name"/>
            <field name="author_ids" widget="many2many_tags"/>
            <field name="active"/>
            <field name="state"/>
        </group>
        <group>
            <field name="date_release"/>
            <field name="pages"/>
            <field name="retail_price"/>
            <field name="currency_id"/>
            <field name="publisher_id"/>
            <field name="description"/>
        </group>
        </sheet>
    </form>
        </field>
    </record>

    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">Library Book List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_release"/>
                <field name="state"/>
                <field name="retail_price"/>
                <field name="currency_id" invisible="True"/>
                <field name="pages"/>
                <field name="publisher_id"/>
            </tree>
        </field>
    </record>

    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">Library Book Search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter string="No Authors"
                        domain="[('author_ids','=',False)]"/>
            </search>
        </field>
    </record>
