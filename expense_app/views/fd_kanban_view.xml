<?xml version="1.0"?>
<odoo>

  <!-- Add Kanban view -->
  <record id="fd_invest_kanban" model="ir.ui.view">
    <field name="model">fd.invest</field>
    <field name="arch" type="xml">

<kanban default_group_by="name" class="o_kanban_small_column" >

  <!-- Fields (to use in expressions)... -->
  <field name="name" />
  <field name="date" />
  <field name="total" />
  <field name="value" />
  <field name="gain" />
  <field name="kanban_state" />
  <field name="color" />

  <!-- Optional progress bar  -->
  <progressbar
      field="kanban_state"
      colors='{"1": "success", "2": "danger", "0": "warning"}' />

  <!-- Templates with HTML snippets to use... -->
  <templates>
    <t t-name="kanban-box">
      <!-- HTML QWeb template... -->

  <!-- Set the Kanban Card color: -->
  <div t-attf-class="
    oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}
    oe_kanban_global_click">

      <div class="o_dropdown_kanban dropdown">
          <!-- Top-right drop down menu here... -->
          <a class="dropdown-toggle btn"
             data-toggle="dropdown" role="button"
            aria-label="Dropdown menu"
            title="Dropdown menu"
             href="#">
            <span class="fa fa-ellipsis-v"/>
          </a>
          <div class="dropdown-menu" role="menu">
            <!-- Edit and Delete actions, if available: -->
            <t t-if="widget.editable">
              <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
            </t>
            <t t-if="widget.deletable">
              <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
            </t>
            <!-- Color picker option: -->
            <ul class="oe_kanban_colorpicker" data-field="color"/>
          </div>

      </div>

      <div class="oe_kanban_body">
         <!-- Content elements and fields go here... -->

        <div>
            <strong>
            <a type="open"><field name="name" /></a>
            </strong>
        </div>
        <ul>
            <!-- li t-attf-class="oe_kanban_text_{{
              record.user_id.raw_value lt '2'
              ? 'black' : 'red' }}"-->
            <li>
              <field name="date"/>
            </li>
                       
            <t t-if="record.total.raw_value gt 0">
              <li>Invested: <field name="total"/></li>
            </t>
            
            <li t-attf-class="oe_kanban_text_{{
              record.gain.raw_value gt 1
              ? 'red' : 'black' }}">
              Present Value: <field name="value" />
            </li>
            <li>
              Gain: <field name="gain"/>
            </li>
 
        </ul>

      </div>
      <!--div class="oe_kanban_footer">
        <div class="oe_kanban_footer_left">
 
            <field name="priority" widget="priority"/>

        </div>
        <div class="oe_kanban_footer_right">

            <field name="kanban_state" widget="kanban_state_selection"/>
            <img t-att-src="kanban_image(
              'library.checkout', 'member_image', record.id.raw_value)"
              t-att-title="record.member_id.value"
              t-att-alt="record.member_id.value"
              width="24" height="24"
              class="oe_kanban_avatar" />
        </div>
      </div-->
      <div class="oe_clear"/>
  </div> <!-- end of kanban color -->

    </t>
  </templates>

      </kanban>

    </field>
  </record>
</odoo>
