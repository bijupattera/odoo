<?xml version="1.0"?>
<odoo>

    <record id="view_cash" model="ir.ui.view">
        <field name="name">CASH Form</field>
        <field name="model">cash.inhand</field>
        <field name="arch" type="xml">
            <form string="CASH">
                <sheet>
                    <group>
                        <group>
                            <field name="name" default_focus="1"/>
                            <field name="date"/>
                            <field name="debit" attrs="{'invisible': [('credit', '>', '0')]}"/>
                         </group>
                        <group>
                            <field name="credit" attrs="{'invisible': [('debit', '>', '0')]}"/>
                            <field name="balance"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_cash" model="ir.ui.view">
        <field name="name">Cash List</field>
        <field name="model">cash.inhand</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="date"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="debit" sum="Debit Total"/>
                <field name="credit" sum="Credit Total"/>
                <field name="balance"/>
            </tree>
        </field>
    </record>
    <record id="view_search_cash" model="ir.ui.view">
        <field name="name">cash.inhand.search</field>
        <field name="model">cash.inhand</field>
        <field name="arch" type="xml">
            <search string="Cash In Hand">
                <field name="name"/>
                <field name="debit"/>
                <field name="credit"/>
                <separator/>
                <filter string="Debit" name="filter_debit" domain="[('debit', '&gt;=', '1')]"/>
                <filter string="Credit" name="filter_credit" domain="[('credit', '&gt;=', '1')]"/>
                <group expand="1" string="Group By">
                    <filter string="Date" name="groupby_date_year" context="{'group_by':'date:year'}"/>
                    <filter string="Date" name="groupby_date_month" context="{'group_by':'date:month'}"/>
                </group>
                <searchpanel>
                    <field name="currency_id" string="Currency" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>
