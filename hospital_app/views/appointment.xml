<?xml version="1.0"?>
<odoo>
    <record id="appointment_form" model="ir.ui.view">
        <field name="name">Appointment Form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <!--                    <button name="mark_cancel" string="Cancel Appointment" states="draft" type="object"-->
                    <!--                            class="oe_highlight" confirm="Are you sure to cancel this Appointment"/>-->
                    <!--                    two option to open wizard with button one above and one below-->
                    <button name="%(hospital_app.action_cancel_appointment)d"
                            context="{'default_appointment_id': active_id, 'hide_appointment_id': '1'}"
                            string="Cancel Appointment" states="draft" type="action"
                            class="oe_highlight" confirm="Are you sure to cancel this Appointment"/>
                    <!-- context above pushing a value to hide the appointment in cancel_appointment view-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_consultation,done" nolabel="1"
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref"/>
                            <field name="active" invisible="1"/>
                            <field name="priority" widget="priority"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" default_focus="1" invisible="context.get('hide_patient_id')"/>
                            <field name="doctor_id" widget="many2one_avatar_user"/>
                            <field name="appointment_time"/>
                            <field name="date_of_birth"/>
                        </group>
                        <group>
                            <field name="booking_time"/>
                            <field name="gender"/>
                            <field name="age"/>
                            <field name="cancel_time" attrs="{'invisible': [('state', '!=', 'canceled')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <group>
                                <field name="prescription" options="{'collaborative': True}"/>
                            </group>
                        </page>
                        <page string="Pharmacy" name="pharmacy_lines">
                            <field name="pharmacy_line_ids">
                                <!--                                   one2many feild need  a tree and from view inside the filed -->
                                <tree editable="bottom">
                                    <field name="sl_no" class="text-center"/>
                                    <field name="product_id"/>
                                    <field name="price"/>
                                    <field name="qty" class="text-center"/>
                                    <field name="total" sum="Total"/>
                                </tree>
                                <form>
                                    <field name="product_id"/>
                                    <field name="price"/>
                                    <field name="qty"/>
                                    <field name="total"/>
                                </form>
                            </field>
                            <!--                                field clossing here -->
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="appointment_tree" model="ir.ui.view">
        <field name="name">Appointment List</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-warning="state == 'in_consultation'" decoration-info="state  == 'draft'"
                  decoration-danger="state == 'canceled'" decoration-success="state == 'done'"
                  multi_edit="1" export_xlsx="0">
                <header>
                    <button name="action_cancel" type="object" string="Cancel"/>
                    <!-- in base module example-   invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund', 'out_receipt', 'in_invoice', 'in_refund','in_receipt')"/>-->
                </header>
                <field name="patient_id"/>
                <field name="ref"/>
                <field name="active" invisible="1"/>
                <field name="doctor_id" widget="many2one_avatar_user"
                       attrs="{'invisible': [('doctor_id', '!=', 'uid')]}"/>
                <field name="appointment_time"/>
                <field name="booking_time"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="date_of_birth"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state" widget="badge"
                       decoration-warning="state == 'in_consultation'"
                       decoration-info="state  == 'draft'"
                       decoration-danger="state == 'canceled'"
                       decoration-success="state == 'done'"/>
                <button name="action_done" class="fa fa-check btn-success" string=" " type="object"
                        attrs="{'invisible': [('state', '!=', 'in_consultation')]}"/>
                <button name="%(hospital_app.action_cancel_appointment)d" string=" " states="draft" type="action"
                        context="{'default_appointment_id': active_id, 'hide_appointment_id': '1'}"
                        class="fa fa-times btn-danger"
                        attrs="{'invisible': [('state', 'not in', ('draft'))]}"/>
                <groupby name="patient_id">
                    <!--                    action method must be on co model in this case hospital.patient-->
                    <button name="action_test" class="oe_highlight" string="Test" type="object"/>
                    <button name="edir" class="oe_highlight" string="Edit" type="edit"/>
                </groupby>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="appointment_calendar">
        <field name="model">hospital.appointment</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="appointment_time" color="state" mode="day" quick_add="False">
                <field name="ref"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="appointment_activity" model="ir.ui.view">
        <field name="name">Appointment Activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointment">
                <field name="patient_id"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)"
                             t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div>
                            <field name="patient_id" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id="appointment_search" model="ir.ui.view">
        <field name="name">Appointment Search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search string="Appointments">
                <field name="patient_id" filter_domain="['|', ('patient_id','ilike',self), ('ref','ilike',self)]"
                       string="Appointment"/>
                <field name="age"/>
                <field name="ref"/>
                <field name="gender"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Done" name="filter_done" domain="[('state', '=', 'done')]"/>
                <filter string="In Consultation" name="filter_in_consultation"
                        domain="[('state', '=', 'in_consultation')]"/>
                <filter string="Canceled" name="filter_canceled" domain="[('state', '=', 'canceled')]"/>
                <searchpanel>
                    <field name="state" string="Status" enable_counters="1" context="{}"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">calendar,tree,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Appointment
            </p>
            <p>
                Customer is GOD and treat them properly.
            </p>
        </field>
    </record>

    <menuitem id="menu_appointments"
              name="Appointments"
              parent="hospital_menu_root"
              sequence="10"
    />

    <menuitem id="menu_appointments_appointments"
              name="Appointments"
              action="action_appointment"
              parent="menu_appointments"
              sequence="5"
    />


</odoo>
