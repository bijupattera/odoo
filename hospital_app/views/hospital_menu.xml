<?xml version="1.0"?>
<odoo>


    <menuitem id="hospital_menu_root"
              name="Hospital"
              sequence="-100"
    />

    <menuitem id="menu_configuration"
              name="Configuration"
              parent="hospital_menu_root"
              sequence="100"
    />

    <record id="action_add_appointment" model="ir.actions.act_window">
        <field name="name">Add Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

        <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="res_model">cancel.appointment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
