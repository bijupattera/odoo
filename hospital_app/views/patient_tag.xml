<?xml version="1.0"?>
<odoo>
    <record id="patient_tag" model="ir.ui.view">
        <field name="name">Patient Tag</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form string="Patient Tag">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
              </form>
        </field>
    </record>

    <record id="patient_tag_tree" model="ir.ui.view">
        <field name="name">Patient Tag List</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="action_patient_tag" model="ir.actions.act_window">
        <field name="name">Patient Tag</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Patient Tag
            </p>
            <p>
                Customer is GOD and treat them properly.
            </p>
        </field>
    </record>

    <menuitem id="menu_patient_tag"
              name="Patient Tags"
              action="action_patient_tag"
              parent="menu_configuration"
              sequence="5"
    />
</odoo>
